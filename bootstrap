#!/bin/bash

########################
# Grab latest version  #
########################
DIRNAME=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )
MYVERSION=1

cd $DIRNAME
git stash
git checkout master
git pull origin master

if [ -z $1 ]; then
  if [ -e "version.txt"]; then
    if [ $MYVERSION -lt $(cat "version.txt") ]; then
      . $(basename $0) $MYVERSION
    fi
  else
    . $(basename $0) $MYVERSION
  fi
fi

. bash/setupaliases
. git/setupgit

cd -
