#!/bin/bash

Z=${BASH_SOURCE[0]}

########################
# Grab latest version  #
########################
DIRNAME=$( builtin cd "$( dirname "$Z" )" && pwd )
MYVERSION=2
     
pushd $DIRNAME &>/dev/null
git stash &>/dev/null
git checkout master &>/dev/null
git fetch origin master &>/dev/null

fetch="$(git diff --name-only origin/master)"
if [ -n "$fetch" ]; then
  git pull origin -f master &>/dev/null
  . $(basename $Z) $MYVERSION
else
  . bash/setupaliases
  . bash/mycd
  export -f prplmnky_cd
  . git/setupgit
fi

popd $OLDPWD &>/dev/null

